{
  // Utilise la configuration ESLint moderne (Flat Config)
  "eslint.useFlatConfig": true,

  // Corrige automatiquement les erreurs ESLint à l'enregistrement
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  // Langages vérifiés par ESLint
  "eslint.validate": [
    "javascript",
    "typescript",
    "vue"
  ]
}
